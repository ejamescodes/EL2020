		<title>PiSS(Pi Security System)</title>

		<script src="http://ajax.googleapis.com/ajax/libs/jquery/2.1.4/jquery.min.js"></script>
		<script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
	</head>

	<body onload="go()">

		<center>
			<div id="button">
				<input onClick="button()" type="button" value="Disarm" style="width: 250px; height: 100px; font-size: 30px "><input onClick="button()" type="button" value="Arm" style="width: 250px; height: 100px; font-size: 30px ">
			</div>
			<div id="table" style="width: 750px; height: 100px"></div>
		</center>

		<script type='text/javascript'>
			//Load the charts libraries
			google.charts.load('current', {packages:['table']});
			//create empty array as a global
			var chartData = [];
					
			function button(){
				var xhr = new XMLHttpRequest();
				xhr.open("GET","/button", true);
				xhr.send();	
			}
			
			//This function is called when the page loads
			function go(){
				goTime = new Date();
				console.log('It\'s Go Time! '+goTime);
				getData();
				setInterval(function() {
					xTime = new Date();
					console.clear();
					console.log('Update Initiated: '+xTime);
					getData();
				}, 60000);
			}

			//grabs the data from the sqlData app.route and pushes it into an array
			function getData(){
				//Clear the array first
				chartData = [];
				$.getJSON('/sqlData', function(chartJSON) {
					console.log(chartJSON);
					for (i = chartJSON.length-1; i < chartJSON.length; i++){
						chartData.push([new Date(chartJSON[i].Date), chartJSON[i].Arm, chart.JSON[i].Trigger]);
					};
					drawTable();
				});
			}  
	        
	        	//Draws the table
		        function drawTable() {
				var data = new google.visualization.DataTable();
				data.addColumn('date', 'Date');
				data.addColumn('number', 'Arm');
				data.addColumn('number', Trigger);
				data.addRows(chartData);

				var table = new google.visualization.Table(document.getElementById('table'));
				table.draw(data, showRowNumber: false, width: '100%' , height: '100%'});
			}

		</script>


	</body>

